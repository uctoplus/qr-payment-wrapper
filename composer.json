  "license": "WTFPL",
  "description": "Wrapper for generating QR payments for Czech, Slovak and European standards",
  "authors": [
    {
      "name": "Mário Čechovič",
      "email": "mario@uctoplus.sk"
    }
  ],
  "require": {
    "php": ">=8.1",
    "rikudou/czqrpayment": "^5.3",
    "rikudou/skqrpayment": "^4.2",
    "rikudou/euqrpayment": "^1.4",
    "endroid/qr-code": "^4.0.0",
    "sprain/swiss-qr-bill": "^4.0",
    "ext-mbstring": "*",
    "leongrdic/pdf417": "^1.0.0",
    "globalcitizen/php-iban": "^4.2",
    "ext-imagick": "*"
